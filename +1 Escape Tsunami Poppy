local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/WhoGodsyoure/MyHome/refs/heads/main/Made%20By%20Me%20Part%202%20Open%20And%20Close"))()

local Window = Library:CreateWindow({
    Title = "+1 Escape Tsunami Poppy | ArchiveXNova"
})

local Main = Window:Section("Mobs")

Main:Button("Automatic Pick Up Secret Once", function()
    local player = game:GetService("Players").LocalPlayer
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    local targetPos = CFrame.new(61.255, 3.225, 42.950)

    local spawnedItem = workspace
        :WaitForChild("ItemSpawners")
        :WaitForChild("Secret")
        :WaitForChild("SpawnedItem")

    local part = spawnedItem.PrimaryPart or spawnedItem:FindFirstChildWhichIsA("BasePart", true)
    if not part then return end

    hrp.CFrame = part.CFrame
    task.wait(0.25)

    local prompt = spawnedItem:FindFirstChildWhichIsA("ProximityPrompt", true)
    if prompt then
        fireproximityprompt(prompt)
    end

    task.wait(0.3)
    hrp.CFrame = targetPos
end)

local Main = Window:Section("Upgrade Shop")

Main:Button("Purchase Speed +1", function()
    game:GetService("ReplicatedStorage").Events.PurchaseSpeed:FireServer(1)
end)

Main:Button("Purchase Speed +5", function()
    game:GetService("ReplicatedStorage").Events.PurchaseSpeed:FireServer(5)
end)

Main:Button("Purchase Speed +10", function()
    game:GetService("ReplicatedStorage").Events.PurchaseSpeed:FireServer(10)
end)

Main:Button("Purchase Carry", function()
    game:GetService("ReplicatedStorage").Events.PurchaseCarry:FireServer()
end)

local Main = Window:Section("Inventory")

Main:Button("Sell Inventory", function()
    game:GetService("ReplicatedStorage").Events.RequestSell:FireServer("Inventory")
end)

local Main = Window:Section("VIP")

Main:Button("Remove Door", function()
    local v = workspace:FindFirstChild("VIP")
    if v then v:Destroy() end
end)

local Main = Window:Section("Tsunamis")

Main:Button("Remove Tsunamis", function()
    local t = workspace:FindFirstChild("Tsunamis")
    if t then t:Destroy() end
end)

local Main = Window:Section("Money")

Main:Button("Collect All Money", function()
    local Players = game:GetService("Players")
    local player = Players.LocalPlayer

    local function getHRP()
        local char = player.Character or player.CharacterAdded:Wait()
        return char:WaitForChild("HumanoidRootPart")
    end

    local hrp = getHRP()

    local plot
    for _, v in ipairs(workspace:GetChildren()) do
        if v:IsA("Model") and v.Name:match("^Plot_") and v.Name:find(player.Name) then
            plot = v
            break
        end
    end
    if not plot then return end

    for i = 1, 8 do
        local floor = plot:FindFirstChild("Floor" .. i)
        if floor then
            local slots = floor:FindFirstChild("Slots")
            if slots then
                for _, slot in ipairs(slots:GetChildren()) do
                    local collect = slot:FindFirstChild("CollectTouch", true)
                    if collect and collect:IsA("BasePart") then
                        firetouchinterest(hrp, collect, 0)
                        firetouchinterest(hrp, collect, 1)
                    end
                end
            end
        end
    end
end)
